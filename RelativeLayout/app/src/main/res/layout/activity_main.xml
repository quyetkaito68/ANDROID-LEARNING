<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/textviewred"
      android:layout_centerInParent="true"
      android:background="#FF0000"
      android:textSize="50sp"
      android:textColor="#FFFFFF"
      android:text="RED"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@+id/textviewred"
        android:layout_below="@+id/textviewred"
        android:id="@+id/textviewgreen"
        android:layout_centerInParent="true"
        android:background="#4BDA0D"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:text="GRN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@+id/textviewred"
        android:layout_below="@+id/textviewgreen"
        android:id="@+id/textviewblue"
        android:layout_centerInParent="true"
        android:background="#00D8FF"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:text="BLUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@+id/textviewred"
        android:layout_below="@+id/textviewblue"
        android:id="@+id/textviewpink"
        android:layout_centerInParent="true"
        android:background="#F68AEB"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:text="PINK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>